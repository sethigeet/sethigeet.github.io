---
const { heading } = Astro.props;
---

<li class="toc-item mb-1">
  <a
    href={"#" + heading.slug}
    data-slug={heading.slug}
    class="toc-link text-slate-500 no-underline transition-colors duration-200 ease-in-out hover:text-slate-800 dark:text-slate-400 dark:hover:text-slate-200"
  >
    {heading.text}
  </a>
  {
    heading.subheadings.length > 0 && (
      <ul class="subheadings mt-1 list-none pl-4">
        {heading.subheadings.map((subheading: any) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
